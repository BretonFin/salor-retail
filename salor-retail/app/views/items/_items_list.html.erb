<div class="list">
  <% if @current_configuration.items_view_list then %>
    <table width="100%" class="stripe-me">
    <tr>
      <% [:name,:base_price,:sku,:quantity,:quantity_sold, '',''].each do |key| %>
        <% if not key == '' %>
          <th class="pointer" onclick="window.location = '?order_by=<%= key %>&page=<%= params[:page]%>';"><%= I18n.t("activerecord.attributes.#{key}") %></th>
        <% else %>
          <th> &nbsp;</th>
        <% end %>
      <% end %>
    </tr>
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= link_to item.name, item_path(item) %>
        </td>
        <td>
          <%= if item.behavior == 'coupon' and item.coupon_type == 1
                number_to_percentage(item.base_price)
              elsif item.behavior == 'coupon' and item.coupon_type == 3
                # nothing
              else
                salor_number_to_currency(item.base_price)
              end
          %>
        </td>
        <td>
          <%= item.sku %>
        </td>
        <td>
          <%= item.quantity %>
        </td>

        <td>
          <%= item.quantity_sold%>
        </td>
        <td>
        <div onmousedown="window.location ='<%= edit_item_path(item)%>';" style="padding: 5px;">
          <%= link_to(image_tag('/images/icons/' + icon(:edit,32)), edit_item_path(item)) %>
          </div>
        </td>
        <td>
          <%= link_to(image_tag('/images/icons/' + icon(:delete,32)), item, :confirm => 'Are you sure?', :method => :delete) %>
        </td>
      </tr>
    <% end %>
    </table>
  <% else %>
    <% @items.each do |item| %>
      <div class="widget master-wide">
          <a href="<%= edit_item_path(item) %>" onmousedown="window.location = '<%= edit_item_path(item) %>';">
            <img src="/images/icons/<%= icon(:item,32) %>" /><br />
            <% if item.behavior != 'coupon' %>
              <%= raw  "<small>#{item.name}<br />[#{salor_number_to_currency(item.base_price)}] [#{item.sku}]</small>" %>
            <% else  %>
              <%= raw "<small>#{item.name}<br />[#{number_to_percentage(item.base_price)}] [#{item.sku}]</small>" %>
            <% end %>
          </a>
            <div class="list slave">
              <div>
                <%= link_to image_tag('/images/icons/' + icon(:delete,16)), item , :confirm => 'Are you sure?', :method => :delete %>
              </div>
            </div>
            <!-- End ul.list -->
      </div>
    <% end  %>
  <% end %>
</div> 
 
