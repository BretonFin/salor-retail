<script type="text/javascript">
function showHideCustomerOrRebate() {
  if ($('.pos-customer').hasClass('shown')) {
    $('.pos-customer').removeClass('shown');
    $('.pos-customer').hide();
    $('.rebate').addClass('shown');
    $('.rebate').show();
  } else {
    $('.rebate').removeClass('shown');
    $('.rebate').hide();
    $('.pos-customer').addClass('shown');
    $('.pos-customer').show();
  }
}
function clearOrder() {
  $.get('/orders/clear?order_id=' + Order.id);
}

function clickBuyOrderButton(id) {
  get('/vendors/toggle?ajax=true&klass=Order&field=toggle_buy_order&model_id=' + id, 'pos/menu');
  //focusInput($('.void-order-input'));
}
function showLastFiveOrders() {
  var d = $('.last-five-orders');
  d.show();
  d.css({'z-index': 1001});
}
function getNewOrder() {
  if ($pos) {
    $pos.saveOrder(true);
    get('/orders/new_order_ajax', '_menu.html.erb')
  } else {
    get('/orders/new_order_ajax', '_menu.html.erb')
  }
}
</script>
<div class="pos-menu">
        <div id="new_order_button" onmousedown="getNewOrder();" class="input pos-button new-order">
          <%= t("menu.new_order")%>
        </div>
        <div id="clear_button" onmousedown="clearOrder();" class="input pos-button pos-configuration" style="width: 3%;background-color: red;">
        C
        </div>
        <div id="buy_order_button" class="input pos-button pos-configuration" onclick="clickBuyOrderButton(Order.id);">
        <%= t("menu.buy_order")%>
        </div>
        <div id="configuration_button" onmousedown="showOrderOptions();" class="input pos-button pos-configuration">
          <%= t("menu.configuration")%>
        </div> 
        <div id="show_customers" onmousedown="showLastFiveOrders();" class="input pos-button">
          <%= t("activerecord.models.customer.other")%>
        </div>
        <div id="show_butons" onmousedown="$('#buttons').show();" class="input pos-button">
          <%= t("menu.buttons")%>
        </div>
        <div id="show_search" onmousedown="showSearch();" class="input pos-button">
          <%= t("menu.search")%>
        </div>
        <div id="print_receipt_button" onmousedown="get('/orders/show_payment_ajax?order_id=' + Order.id);" class="input pos-button print-receipt">
          <%= t("system.complete_sale")[0...5] %>
        </div>

</div>
